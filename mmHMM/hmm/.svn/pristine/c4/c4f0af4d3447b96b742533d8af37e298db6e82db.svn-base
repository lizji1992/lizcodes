ifndef ROOT
$(error Must define ROOT variable)
endif

LIBDIR  = $(ROOT)/lib
INCLUDEDIR = $(ROOT)/include

SOURCES = $(shell find . -name "*.cpp")
OBJECTS = $(patsubst %.cpp,%.o,$(SOURCES))
PROGS =  $(patsubst %.cpp,%,$(SOURCES))

DYNAMIC_LIBS = $(shell find $(LIBDIR) -name "*.so"|xargs -n 1 basename)
LIBS = $(patsubst lib%.so,-l%,$(DYNAMIC_LIBS))

LIBS += -lgsl -lgslcblas 

CXX = g++
CFLAGS = -Wall -fPIC -fmessage-length=50
CXXFLAGS = -Wall -fPIC -fmessage-length=50
OPTFLAGS = -O2
DEBUGFLAGS = -g -lefence -L$(HOME)/lib

ifdef DEBUG
CXXFLAGS += $(DEBUGFLAGS)
endif

ifdef OPT
CXXFLAGS += $(OPTFLAGS)
endif

all: $(PROGS)

install: $(PROGS)
	@mkdir -p $(ROOT)/bin
	@install -m 755 $(PROGS) $(ROOT)/bin

%: %.cpp
	$(CXX) $(CXXFLAGS) -o $@ $< -I$(INCLUDEDIR) -L$(LIBDIR) $(LIBS)

clean:
	@-rm -f $(PROGS) *.o *.so *.a *~

.PHONY: clean

